<interface>
  <name>ovsbr1</name>

  <ovs-bridge>
    <ports>
      <port>
        <device>eth1</device>
      </port>
      <port>
        <device>dummy1</device>
      </port>
    </ports>
  </ovs-bridge>

  <ipv4:static>
    <address>
      <local>172.16.200.200/16</local>
    </address>
  </ipv4:static>

  <ipv6:static>
    <address>
      <local>fd00:c0de:ba5e:200::200/48</local>
    </address>
  </ipv6:static>
</interface>

<interface>
  <name>ovs-system</name>
</interface>

<interface>
  <name>eth1</name>

  <link>
    <master>ovs-system</master>
    <port type="ovs-bridge">
      <bridge>ovsbr1</bridge>
    </port>
  </link>

</interface>

<interface>
  <name>dummy1</name>

  <link>
    <master>ovs-system</master>
    <port type="ovs-bridge">
      <bridge>ovsbr1</bridge>
    </port>
  </link>

  <dummy>
    <address>42:41:40:3F:3E:3D</address>
  </dummy>
</interface>
